<?xml version="1.0" encoding="UTF-8"?>
<dhc:dhcpV6ServerConfig xmlns:dhc="http://jagornet.com/dhcpv6/xml"
						xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						xsi:schemaLocation="http://jagornet.com/dhcpv6server.xsd">
    <serverIdOption>
        <opaqueData>
            <hexValue>abcdef0123456789</hexValue>
        </opaqueData>
    </serverIdOption>
    <v4ServerIdOption>
        <ipAddress>192.168.200.1</ipAddress>
    </v4ServerIdOption>
    <policies>
    	<policy>
    		<name>database.schemaType</name>
    		<value>jdbc</value>
    	</policy>
    	<policy>
    		<name>database.schemaVersion</name>
    		<value>2</value>
    	</policy>
    	<policy>
    		<name>database.schemaFilename</name>
    		<value>db/jagornet-dhcpv6-schema-derby-v2.sql</value>
    	</policy>
    	<policy>
    		<name>dhcp.ignoreSelfPackets</name>
    		<value>false</value>
    	</policy>
    	<policy>
    		<name>dhcp.ignoreLoopback</name>
    		<value>false</value>
    	</policy>
    	<policy>
    		<name>dhcp.ignoreLinkLocal</name>
    		<value>false</value>
    	</policy>
        <policy>
            <name>supportRapidCommit</name>
            <value>true</value>
        </policy>
    </policies>
    <msgConfigOptions>
        <dnsServersOption>
            <ipAddress>3ffe::0001</ipAddress>
            <ipAddress>3ffe::0002</ipAddress>
            <ipAddress>3ffe::0003</ipAddress>
        </dnsServersOption>
        <domainSearchListOption>
            <domainName>foo.com.</domainName>
            <domainName>bar.com.</domainName>
            <domainName>yuk.com.</domainName>
        </domainSearchListOption>
    </msgConfigOptions>
    <links>
        <link>
			<name>Client Link 1</name>
			<interface>en1</interface>
			<naAddrPools>
				<pool>
					<range>fd00:9a60:deb1::0000:000a-fd00:9a60:deb1::ffff:ffff</range>
				</pool>
			</naAddrPools>
		</link>
        <link>
            <name>V4 Client Link 1</name>
            <address>192.168.0.1/24</address>
            <v4AddrPools>
                <pool>
                    <range>192.168.0.100-192.168.0.199</range>
                </pool>
            </v4AddrPools>
        </link>
    </links>
</dhc:dhcpV6ServerConfig>