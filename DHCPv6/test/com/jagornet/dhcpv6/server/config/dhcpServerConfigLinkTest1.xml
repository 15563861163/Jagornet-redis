<?xml version="1.0" encoding="UTF-8"?>
<dhc:dhcpV6ServerConfig xmlns:dhc="http://ietf.org/dhc/dhcpv6">
	
	<policies>
		<name>sendRequestedOptionsOnly</name>
		<value>true</value>
	</policies>

	<serverIdOption>
		<hexValue>abcdef0123456789</hexValue>
	</serverIdOption>

	<standardOptions>
		<dnsServersOption>
			<serverIpAddresses>3ffe::0001</serverIpAddresses>
			<serverIpAddresses>3ffe::0002</serverIpAddresses>
			<serverIpAddresses>3ffe::0003</serverIpAddresses>
		</dnsServersOption>
		<domainSearchListOption>
			<domainNames>foo.com.</domainNames>
			<domainNames>bar.com.</domainNames>
			<domainNames>yuk.com.</domainNames>
		</domainSearchListOption>
	</standardOptions>

	<filters>
		<name>UserClass Filter Group 1</name>
		<filterExpressions>
			<optionExpression>
				<code>15</code>
				<data>
					<asciiValue>FilterUserClass</asciiValue>
				</data>
			</optionExpression>
		</filterExpressions>
		<standardOptions>
			<domainListOption>
				<domainNames>filter.com.</domainNames>
			</domainListOption>
		</standardOptions>
	</filters>
	
	<links>
		<name>Client Link 1</name>
		<address>2001:DB8:1::/48</address>
		<standardOptions>
			<dnsServersOption>
				<serverIpAddresses>2001:DB8:1::1</serverIpAddresses>
			</dnsServersOption>
		</standardOptions>
	</links>
	<links>
